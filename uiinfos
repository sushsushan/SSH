
<?php
// Execute UAPI command
$command = "uapi Variables get_user_information";
$output = shell_exec($command);
$data = yaml_parse($output);

// Extract relevant data
$user_info = $data['result']['data'] ?? [];

?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Information</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .table thead {
            background-color: #007bff;
            color: white;
        }
        .key {
            font-weight: bold;
            color: #343a40;
        }
        .value {
            color: #007bff;
        }
        .highlight {
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
<div class="container mt-4">
    <h2 class="text-center text-primary">User Information</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Key</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($user_info as $key => $value): ?>
                <tr class="<?php echo is_array($value) ? 'highlight' : ''; ?>">
                    <td class="key"><?php echo ucfirst(str_replace('_', ' ', $key)); ?></td>
                    <td class="value">
                        <?php
                        if (is_array($value)) {
                            echo implode(', ', $value);
                        } else {
                            echo htmlspecialchars($value);
                        }
                        ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
