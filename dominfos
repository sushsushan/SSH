#!/bin/bash

# Define colors for table formatting
RED='\033[1;31m'
GREEN='\033[1;32m'
YELLOW='\033[1;33m'
BLUE='\033[1;34m'
CYAN='\033[1;36m'
NC='\033[0m' # No color

# Fetch domain data using uapi
uapi DomainInfo domains_data > domains_output.txt

# Print table header
echo -e "${CYAN}-----------------------------------------------------------------------${NC}"
echo -e "${CYAN}| Domain Name           | Document Root         | Type                |${NC}"
echo -e "${CYAN}-----------------------------------------------------------------------${NC}"

# Extract required fields and format output
grep -E 'domain: |documentroot: |type: ' domains_output.txt | paste - - - | while IFS=$'\t' read -r domain root type; do
    domain_name=$(echo "$domain" | awk '{print $2}')
    document_root=$(echo "$root" | awk '{print $2}')
    domain_type=$(echo "$type" | awk '{print $2}')
    
    printf "| %-20s | %-20s | %-18s |\n" "$domain_name" "$document_root" "$domain_type"
done

# Print table footer
echo -e "${CYAN}-----------------------------------------------------------------------${NC}"
