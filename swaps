#!/bin/bash

# Prompt the user to enter the account number
read -p "Enter the account number: " accountNumber

# Prompt the user to choose a brand
echo "Choose a brand:"
echo "1) Bluehost (bh)"
echo "2) HostGator (hg)"
read -p "Enter your choice (bh/hg): " brandChoice

# Map user input to the correct brand string
case "$brandChoice" in
    bh) brand="bluehost" ;;
    hg) brand="hostgator" ;;
    *) 
        echo "Invalid choice! Please enter 'bh' for Bluehost or 'hg' for HostGator."
        exit 1
        ;;
esac

# Run the hal addon_list command with user inputs
hal addon_list tenant_back_ref "$accountNumber" brand "$brand" order_by account_id select id,type,status,account_id,account_username,server_hostname,server_id,meta_domain,back_reference | sed 's/^[ \t]*//;s/[ \t]*$//'
