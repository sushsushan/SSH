#!/bin/bash

# Define Colors
black_bg="\e[40m"       # Black Background
reset="\e[0m"          # Reset Colors
white="\e[97mâ–ˆ$black_bg" # White for Eyes
blue="\e[34mâ–ˆ$black_bg"  # Blue for Iris
black="\e[30mâ–ˆ$black_bg" # Black for Pupil
space="  "             # Space for alignment

# Clear the screen
clear

# Apply Black Background
echo -e "$black_bg"

# Creating Two Eyes with Black Background
echo -e "$space$space$space$space$space$space$space$space$space$space$space$space$white$white$white$white$white$space$space$space$space$space$space$space$space$space$space$space$space$white$white$white$white$white"
echo -e "$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$blue$blue$white$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$blue$blue$white"
echo -e "$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$black$blue$white$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$black$blue$white"
echo -e "$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$blue$blue$white$space$space$space$space$space$space$space$space$space$space$space$space$white$blue$blue$blue$white"
echo -e "$space$space$space$space$space$space$space$space$space$space$space$space$white$white$white$white$white$space$space$space$space$space$space$space$space$space$space$space$space$white$white$white$white$white"

# Reset Colors
echo -e "$reset"

# Bold Crazy Message
echo -e "\e[1;35m             ðŸ‘€ CRAZY VISION ðŸ‘€\e[0m"
